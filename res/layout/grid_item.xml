<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <ImageView android:id="@+id/grid_item_icon"
        android:layout_marginLeft="50dp" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <TextView android:id="@+id/grid_item_label" android:layout_below="@+id/grid_item_icon"
        android:paddingTop="2sp" android:textColor="#ffffff"
        android:textSize="15sp" 
        android:singleLine="true" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:ellipsize="marquee" android:layout_marginLeft="50dp"
       
         />
</RelativeLayout>